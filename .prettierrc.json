{
  "singleQuote": true,
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 120,
  "arrowParens": "always",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^(react|recoil)$",
    "<THIRD_PARTY_MODULES>",
    "^@chakra-ui/(.*)$",
    "^@mui/(.*)$",
    "^@pages/(.*)$",
    "^@components/(.*)$",
    "^@styles/(.*)$",
    "^@context/(.*)$",
    "^@hooks/(.*)$",
    "^@services/(.*)$",
    "^@/types/(.*)$",
    "^@data/(.*)$",
    "^@utils/(.*)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
